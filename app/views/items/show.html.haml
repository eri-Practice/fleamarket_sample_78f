.DetailsContents
  .DetailsContents__container
    .DetailsInner
      .DetailsInner__top
        .ItemBox
          .ItemBox__name
            %p
              = @item.name
          .ItemBox__body
            %ul
              %li.top
                = image_tag @item.images[0].image_url.url, class:'TopImage'
                %ul
                  - @item.images.each do |image|
                    %li
                      = image_tag image.image_url.url, class:'BottomImage'
          .ItemBox__price
            %p
              = "#{@item.price}円"
            .itemBox__price-detail
              %span （税込）
              %span 送料込み
          .ItemDetail
            = @item.text
          .ItemBox__table
            %table
              %tbody
                %tr
                  %th
                    出品者
                  %td
                    = @user.nickname
                %tr
                  %th
                    カテゴリー
                  %td.category
                    = link_to @item.category.root.name, "#"
                    %br
                    = link_to ">#{@item.category.parent.name}", "#"
                    %br
                    = link_to ">#{@item.category.name}", "#"
                    
                %tr
                  %th
                    商品サイズ
                  %td
                    
                %tr
                  %th
                    商品の状態
                  %td
                    = @item.condition
                %tr
                  %th
                    配送料の負担
                  %td
                    = @item.postage_payer
                %tr
                  %th
                    発送元の地域
                  %td
                    = link_to '#' do

                      = @item.prefecture.name
                %tr
                  %th
                    発送日の目安
                  %td
                    = @item.standby_day
          .ItemBox__optionalArea
            %ul
              %li.optionalBtn.likeBtn
                %i.fas.fa-star
                お気に入り 0
            %ul.optional
              %li.optionalBtn
                = link_to "#" do
                  %i.fas.fa-flag
                  不適切な商品の通報
        - if user_signed_in? && @item.seller_id== current_user.id
          = link_to '商品の編集', edit_item_path(@item.id), method: :get, class:'EditBtn'
          = link_to '商品を削除する', item_path(@item.id), method: :delete, class:'EditBtn'
        - if user_signed_in? && @item.seller_id != current_user.id
          = link_to '購入画面に進む', buy_item_path(@item.id), method: :get, class:'EditBtn'

      %ul.links
        %li
          = link_to "#" do
            %i.fas.fa-angle-left
            %span 前の商品
        %li
          = link_to "#" do
            %span 後ろの商品
            %i.fas.fa-angle-right
      .RelatedItems
        = link_to "#" do
          もっと見る
        .productLists